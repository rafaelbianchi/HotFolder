    private void btn_inputActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        
        JFileChooser jf = new JFileChooser("C:\\Users\\bianchi.rafael\\Desktop\\PDF\\Nova pasta");
        jf.setFileSelectionMode(DIRECTORIES_ONLY);
        jf.setDialogTitle("Selecione a pasta 'home'");
        
        if (jf.showOpenDialog(this) ==  JFileChooser.APPROVE_OPTION){
            //pega o 'valor' (caminho da pasta) e guarda em File
            File caminho = jf.getSelectedFile();
            //caminho.getAbsolutePath().toString();
            boolean mkdir = caminho.mkdir();
            //Converte o caminho File em Path.
            Path diretorio = caminho.toPath();
            //Teste com label para mostra o camilho escolhido
            lbl1.setText("Teste de JFileChooser");
            lbl2.setText(diretorio.toString());
           
            try {
            
                //monitoramento da pasta
             WatchService watcher = FileSystems.getDefault().newWatchService();
            // regitrs pra receber eventos de criação no direotrio
            diretorio.register(watcher, ENTRY_CREATE);
           //loop infinito
           while (true){
               WatchKey wk = null;
                try {
           //aguarda algum evento ocorrer
           //System.out.printf("Aguardando arquivos em %s", pastaOrigem);
            wk = watcher.take();
            } catch (InterruptedException e) {
            throw new RuntimeException(e);
            }//fim do try wk
           //percorre eventos
           
           for (WatchEvent<?> event: wk.pollEvents()){
               
               //ignora se ocorre problemas
               if ( event.kind()==OVERFLOW)continue;
               
               //pega o nome do arquivo criado
               WatchEvent<Path> ev = (WatchEvent<Path>) event;
               Path nomeArquivo = ev.context();
               Path arquivoOrigem = diretorio.resolve(nomeArquivo);
               //deveria imprimir =/
               Runtime.getRuntime().exec("print /d:PDFillWriterPort "+nomeArquivo);
               
               
           }// fim do for watchEvent
           
           
           }//fim do while
                
            } catch (IOException ex) {
                Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
            
            
            
            
            
            
            
            
            
            
            
        }
        
        
        //Notas
         //Cria um arquivo no caminho selecionado pelo getAbsolutePath
            //File fs = new File(caminho.getAbsolutePath(), "arquivo2.txt");
            //    fs.createNewFile();
                /*//Usa os comando do windows, no modo console....
                try {
                Runtime.getRuntime().exec("control");
                } catch (IOException ex) {
                Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
                }*/
        
        
        
    }                                         

